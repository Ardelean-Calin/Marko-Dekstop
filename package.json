{
  "name": "desktop-application-template",
  "version": "1.0.0",
  "description": "A simple template to aid in constructing beautiful desktop applications using Electron and Markojs.",
  "main": "main_electron.js",
  "scripts": {
    "dev": "concurrently \"webpack --watch\" \"cross-env NODE_ENV=development electron .\"",
    "pack": "webpack",
    "prod": "webpack && cross-env NODE_ENV=production electron .",
    "build": "electron-packager . --out build/ --no-package-manager"
  },
  "keywords": ["electron", "marko", "webpack", "desktop", "markojs", "bulma", "font-awesome"],
  "author": "Ardelean Calin-Petru (ardelean.calin@outlook.com)",
  "license": "ISC",
  "dependencies": {
    "marko": "^4.4.28",
    "string-template": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "electron": "^1.7.6",
    "electron-packager": "^9.1.0",
    "electron-reload": "^1.2.1",
    "marko-loader": "^1.3.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.6.0"
  }
}
